{
  "name": "blockchain",
  "version": "1.0.0",
  "description": "Implementation of blockchain in JS",
  "main": "index.ts",
  "author": "Synthetique",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "yarn build && yarn watch",
    "build": "yarn build-ts && yarn tslint",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn serve\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "serve": "nodemon ts-build/src/index.js",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "dependencies": {
    "crypto-js": "^3.1.9-1",
    "typescript": "^2.7.1"
  },
  "devDependencies": {
    "@types/crypto-js": "^3.1.38",
    "concurrently": "^3.5.1",
    "nodemon": "^1.14.12",
    "prettier": "^1.10.2",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.6.0",
    "tslint-config-prettier": "^1.7.0"
  }
}
